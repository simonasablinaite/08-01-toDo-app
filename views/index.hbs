{{#with model}}

<div id="title-container">
   <h1>
      {{title}}
   </h1>
</div>

<hr/>
<main>
   <form method="post">
      <div class="input">    
         <input type="text" id="input-a" name="note"/>  
         <label for="input-a">Your Text here! </label>
      </div>
     
         <button class="save-button" type="submit">Save</button>
   </form>

   <section>
      {{#each notes}}
      <div class="note">
         <span class="note-text">{{this.note}}</span>
         <div class="buttons">
            <button onclick="editNote({{this.noteId}}, this)" class="standard">
               <i class="fa-solid fa-pen-to-square"></i>
            </button>
            <button onclick="deleteNote({{this.noteId}})"  class="standard">
               <i class="fa-solid fa-trash"></i>
            </button>
            <button onclick="saveEdit({{this.noteId}}, this)" class="edit hidden">
              <i class="fa-regular fa-floppy-disk"></i>
            </button>
            <button onclick="undoEdit({{this.noteId}}, this)" class="edit hidden">
               <i class="fa-solid fa-arrow-rotate-left"></i>
            </button>
         </div>
      </div>
      {{/each}}
   </section>
</main>

{{/with}}